[includeIf "gitdir:~/"]
	path = ~/user.gitconfig

[init]
	defaultBranch = main

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    line-numbers = true

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[column]
	ui = auto

[branch]
	sort = -committerdate

[safe]
	directory = *
