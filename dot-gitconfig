[includeIf "gitdir:~/"]
	path = ~/user.gitconfig

[init]
	defaultBranch = main

[user]
    name = Ethan Conneely

[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    dark = true
    line-numbers = true
    side-by-side = true
    syntax-theme = OneHalfDark
    commit-decoration-style = bold blue
    file-style = bold blue ul
    file-decoration-style = none
    hunk-header-decoration-style = bold blue

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[column]
	ui = auto

[branch]
	sort = -committerdate

[safe]
	directory = *
