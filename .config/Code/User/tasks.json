{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "TS Errors",
      "type": "typescript",
      "tsconfig": "tsconfig.json",
      "problemMatcher": ["$tsc-watch"],
      "group": "build",
      "presentation": {
        "echo": true,
        "reveal": "never",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": false,
        "clear": false
      },
      "runOptions": { "runOn": "folderOpen" }
    }
  ]
}
